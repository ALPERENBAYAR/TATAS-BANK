@{
    ViewBag.Title = "Şifre Güncelle";
    ViewData["Title"] = "Şifre Güncelle";
}

<style>
    .password-form {
        max-width: 500px;
        margin: 0 auto;
    }

    .form-label {
        color: var(--accent-color);
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-input {
        background: rgba(30, 30, 30, 0.7);
        border: 1px solid rgba(255,255,255,0.1);
        border-left: 3px solid var(--accent-color);
        color: #e0e0e0;
        padding: 0.75rem 1rem;
        width: 100%;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

        .form-input:focus {
            background: rgba(40, 40, 40, 0.9);
            border-left-width: 4px;
            outline: none;
            box-shadow: 0 0 10px rgba(0, 255, 136, 0.1);
        }

    .alert-message {
        padding: 1rem;
        border-radius: 6px;
        margin-bottom: 2rem;
        border: 1px solid transparent;
    }

    .alert-danger {
        background: rgba(255, 75, 75, 0.1);
        border-color: rgba(255, 75, 75, 0.3);
        color: #ff4b4b;
    }

    .alert-success {
        background: rgba(0, 255, 136, 0.1);
        border-color: rgba(0, 255, 136, 0.3);
        color: var(--accent-color);
    }

    /* Düzeltilmiş Buton Stili */
    .action-button {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        border: none;
        border-left: 4px solid var(--accent-color);
        color: #e0e0e0 !important;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        padding: 0.75rem 1.5rem;
        margin-bottom: 1rem;
        display: block;
        width: 100%;
        text-align: center;
        border-radius: 4px;
    }

        .action-button:hover {
            color: var(--accent-color) !important;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 255, 136, 0.2);
        }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="dashboard-card p-4 p-md-5">
                <h1 class="dashboard-title text-center mb-5">ŞİFRE GÜNCELLE</h1>

                @if (TempData["Error"] != null)
                {
                    <div class="alert-message alert-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                    </div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="alert-message alert-success">
                        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    </div>
                }

                <form asp-action="ChangePassword" method="post" class="password-form">
                    <div class="mb-4">
                        <label class="form-label">Mevcut Şifre</label>
                        <input type="password" name="oldPassword" class="form-input" required />
                    </div>

                    <div class="mb-5">
                        <label class="form-label">Yeni Şifre</label>
                        <input type="password" name="newPassword" class="form-input" required />
                    </div>

                    <button type="submit" class="action-button">
                        <i class="fas fa-key me-2"></i>Şifreyi Güncelle
                    </button>
                </form>

                </a>
            </div>
        </div>
    </div>
</div>
</div>