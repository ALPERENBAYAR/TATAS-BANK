@model Bankacilik.Models.AccountViewModel
@{
    ViewData["Title"] = "Hesap Listesi";
}

<style>
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        background: rgba(18, 18, 18, 0.95);
        border-radius: 8px;
        overflow: hidden;
    }

    .table-header {
        background: rgba(0, 255, 136, 0.1);
        border-bottom: 2px solid var(--accent-color);
    }

        .table-header th {
            padding: 1rem;
            text-align: left;
            color: var(--accent-color);
            font-weight: 500;
        }

    .table-row {
        border-bottom: 1px solid rgba(255,255,255,0.05);
        transition: background 0.3s ease;
    }

        .table-row:hover {
            background: rgba(0, 255, 136, 0.05);
        }

        .table-row td {
            padding: 1rem;
            color: #e0e0e0;
        }

    .no-account {
        background: rgba(255, 75, 75, 0.1);
        border: 1px solid rgba(255, 75, 75, 0.3);
        padding: 1.5rem;
        border-radius: 8px;
        color: #ff4b4b;
    }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="dashboard-card p-4 p-md-5">
                <h1 class="dashboard-title text-center mb-5">HESAP LİSTEM</h1>

                @if (Model.Accounts != null && Model.Accounts.Any())
                {
                    <div class="info-section">
                        <div class="table-responsive">
                            <table class="custom-table">
                                <thead class="table-header">
                                    <tr>
                                        <th>Hesap ID</th>
                                        <th>Hesap Numarası</th>
                                        <th>Şube Adı</th>
                                        <th>Bakiye</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in Model.Accounts)
                                    {
                                        <tr class="table-row">
                                            <td>@account.Id</td>
                                            <td>@account.AccountNumber</td>
                                            <td>@account.BranchName</td>
                                            <td>@($"{account.Balance:N2} ₺")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="info-section text-center">
                        <div class="no-account">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            Henüz hiç hesap bulunmamaktadır.
                        </div>
                    </div>
                }

                <div class="text-center mt-4">
                    <a href="/Customer" class="action-button d-inline-block w-auto px-4">
                        <i class="fas fa-arrow-left me-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>