@{
    ViewData["Title"] = "Yeni Şifre Belirle";
}

<style>
    .form-card {
        background: rgba(18, 18, 18, 0.95);
        border: 1px solid rgba(255,255,255,0.1);
        border-left: 4px solid #00ff88;
        backdrop-filter: blur(12px);
        padding: 2rem;
        border-radius: 8px;
        margin-bottom: 2rem;
    }

    .custom-input {
        background: rgba(30, 30, 30, 0.9) !important;
        border: 1px solid rgba(255,255,255,0.2) !important;
        color: #e0e0e0 !important;
        padding: 0.75rem 1rem;
        margin-bottom: 1rem;
        width: 100%;
        transition: all 0.3s ease;
    }

        .custom-input:focus {
            border-color: #00ff88 !important;
            box-shadow: 0 0 0 0.25rem rgba(0,255,136,0.25);
        }

    .submit-btn {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        border: none;
        border-left: 4px solid #00ff88;
        color: #e0e0e0;
        padding: 0.75rem 2rem;
        width: 100%;
        transition: all 0.3s ease;
    }

        .submit-btn:hover {
            color: #00ff88;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 255, 136, 0.2);
        }

    .container {
        padding-top: 3rem;
        padding-bottom: 3rem;
    }

    .alert-message {
        padding: 1rem;
        margin-bottom: 1.5rem;
        border-radius: 4px;
    }

    .alert-success {
        background: rgba(0, 255, 136, 0.1);
        border: 1px solid #00ff88;
        color: #00ff88;
    }

    .alert-error {
        background: rgba(255, 50, 50, 0.1);
        border: 1px solid #ff6b6b;
        color: #ff6b6b;
    }

    h2 {
        color: #00ff88;
        margin-bottom: 2rem;
        text-align: center;
    }
</style>

<div class="container">
    <div class="form-card">
        <h2>Yeni Şifre Belirle</h2>

        <form method="post">
            <input type="hidden" name="email" value="@ViewBag.Email" />
            <input type="hidden" name="userType" value="@ViewBag.UserType" />

            <div class="form-group">
                <label for="newPassword" class="form-label">Yeni Şifre</label>
                <input type="password" name="newPassword" class="custom-input" required placeholder="Yeni şifrenizi girin" />
            </div>

            <button type="submit" class="submit-btn">Şifreyi Güncelle</button>
        </form>
    </div>
</div>