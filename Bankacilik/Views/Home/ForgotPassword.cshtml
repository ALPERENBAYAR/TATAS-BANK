@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<style>
    .form-card {
        background: rgba(18, 18, 18, 0.95);
        border: 1px solid rgba(255,255,255,0.1);
        border-left: 4px solid #00ff88;
        backdrop-filter: blur(12px);
        padding: 2rem;
        border-radius: 8px;
        margin-bottom: 2rem;
    }

    .custom-input {
        background: rgba(30, 30, 30, 0.9) !important;
        border: 1px solid rgba(255,255,255,0.2) !important;
        color: #e0e0e0 !important;
        padding: 0.75rem 1rem;
        margin-bottom: 1rem;
        width: 100%;
        transition: all 0.3s ease;
    }

        .custom-input:focus {
            border-color: #00ff88 !important;
            box-shadow: 0 0 0 0.25rem rgba(0,255,136,0.25);
        }

    .submit-btn {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        border: none;
        border-left: 4px solid #00ff88;
        color: #e0e0e0;
        padding: 0.75rem 2rem;
        width: 100%;
        transition: all 0.3s ease;
    }

        .submit-btn:hover {
            color: #00ff88;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 255, 136, 0.2);
        }

    .alert-message {
        padding: 1rem;
        margin-bottom: 1.5rem;
        border-radius: 4px;
    }

    .alert-success {
        background: rgba(0, 255, 136, 0.1);
        border: 1px solid #00ff88;
        color: #00ff88;
    }

    .alert-error {
        background: rgba(255, 50, 50, 0.1);
        border: 1px solid #ff6b6b;
        color: #ff6b6b;
    }

    .container {
        padding-top: 3rem;
        padding-bottom: 3rem;
    }
</style>

<div class="container">
    <div class="form-card">
        <h2 style="color: #00ff88; margin-bottom: 2rem; text-align: center;">Şifremi Unuttum</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert-message alert-error">@ViewBag.Error</div>
        }

        <form method="post">
            <div class="form-group">
                <label for="name" class="form-label">İsim</label>
                <input type="text" name="name" class="custom-input" required placeholder="Adınızı girin" />
            </div>

            <div class="form-group">
                <label for="surname" class="form-label">Soyisim</label>
                <input type="text" name="surname" class="custom-input" required placeholder="Soyadınızı girin" />
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" class="custom-input" required placeholder="Email adresinizi girin" />
            </div>

            <div class="form-group">
                <label for="userType" class="form-label">Kullanıcı Türü</label>
                <select name="userType" class="custom-input" required>
                    <option value="Customer">Müşteri</option> 
                    <option value="Employee">Çalışan</option> 
                    <option value="Manager">Yönetici</option>
                </select>
            </div>

            <button type="submit" class="submit-btn">Devam</button>
        </form>
    </div>
</div>