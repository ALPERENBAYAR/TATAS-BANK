@{
    ViewData["Title"] = "Müşteri Paneli";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #0a0a0a 0%, #2d2d2d 100%);
        --secondary-gradient: linear-gradient(135deg, #121212 0%, #000000 100%);
        --accent-color: #00ff88;
        --hover-color: #00cc6a;
    }

    body {
        background: var(--secondary-gradient);
        min-height: 100vh;
    }

    .dashboard-card {
        background: rgba(18, 18, 18, 0.95);
        border: 1px solid rgba(255,255,255,0.1);
        border-left: 4px solid var(--accent-color);
        backdrop-filter: blur(12px);
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .dashboard-title {
        color: var(--accent-color);
        font-weight: bold;
        margin-bottom: 2rem;
    }

    .welcome-message {
        color: #e0e0e0;
        font-size: 1.2rem;
    }

    .info-section {
        background: rgba(30, 30, 30, 0.5);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(255,255,255,0.1);
    }

    .info-title {
        color: var(--accent-color);
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    .info-label {
        color: #b0b0b0;
    }

    .info-value {
        color: #e0e0e0;
        font-weight: 500;
    }

    .action-button {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        border-left: 4px solid var(--accent-color);
        color: #e0e0e0;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        padding: 0.75rem 1.5rem;
        margin-bottom: 1rem;
        display: block;
        width: 100%;
        text-align: left;
        border: none;
    }

        .action-button:hover {
            color: var(--accent-color);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 255, 136, 0.2);
        }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="dashboard-card p-4 p-md-5">
                <h1 class="dashboard-title text-center">A N A S A Y F A </h1>

				<div class="welcome-message mb-4">
					Merhaba @Model.CustomerName @Model.CustomerSurname, hesabınıza hoş geldiniz!
                </div>

                <div class="info-section">
                    <h3 class="info-title">Müşteri Bilgileri</h3>
                    <div class="info-item">
                        <span class="info-label">Ad:</span>
                        <span class="info-value">@Model.CustomerName</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Soyad:</span>
                        <span class="info-value">@Model.CustomerSurname</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">E-posta:</span>
                        <span class="info-value">@Model.CustomerMail</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <a href="/Customer/TransferMoney" class="action-button">
                            <i class="fas fa-exchange-alt me-2"></i> Para Transferi
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/Customer/TransferEft" class="action-button">
                            <i class="fas fa-random me-2"></i> EFT Transferi
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/Customer/ListAccount" class="action-button">
                            <i class="fas fa-list-alt me-2"></i> Hesaplarım
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/Customer/ChangePassword" class="action-button">
                            <i class="fas fa-key me-2"></i> Şifre Değiştir
                        </a>
                    </div>
                </div>


                @section Scripts {
                    <script>
                        // Dashboard için gerekli scriptler buraya eklenebilir
                    </script>
                }
