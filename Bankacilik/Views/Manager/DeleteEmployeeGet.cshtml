@{
    ViewData["Title"] = "Çalışan Sil";
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background: rgba(18, 18, 18, 0.95);
        border: 1px solid rgba(255,255,255,0.1);
        border-left: 4px solid #ff4d4d;
        border-radius: 8px;
        backdrop-filter: blur(12px);
    }

    .delete-input {
        background: rgba(30, 30, 30, 0.9) !important;
        border: 1px solid rgba(255,255,255,0.2) !important;
        color: #e0e0e0 !important;
        padding: 0.75rem 1rem;
        margin-bottom: 1.5rem;
        width: 100%;
        transition: all 0.3s ease;
    }

        .delete-input:focus {
            border-color: #ff4d4d !important;
            box-shadow: 0 0 0 0.25rem rgba(255,77,77,0.25);
        }

    .delete-btn {
        background: linear-gradient(135deg, #2d0a0a 0%, #4d1a1a 100%);
        border: none;
        border-left: 4px solid #ff4d4d;
        color: #e0e0e0;
        padding: 0.75rem 2rem;
        width: 100%;
        transition: all 0.3s ease;
        font-weight: 600;
    }

        .delete-btn:hover {
            color: #ff4d4d;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255,77,77,0.2);
        }

    .alert-message {
        padding: 1rem;
        margin-bottom: 1.5rem;
        border-radius: 4px;
    }

    .alert-success {
        background: rgba(0, 255, 136, 0.1);
        border: 1px solid #00ff88;
        color: #00ff88;
    }

    .alert-error {
        background: rgba(255, 50, 50, 0.1);
        border: 1px solid #ff6b6b;
        color: #ff6b6b;
    }

    .warning-text {
        color: #ff9999;
        font-size: 0.9rem;
        margin-top: 1.5rem;
        text-align: center;
    }
</style>

<div class="container py-4">
    <div class="delete-container">
        <h2 style="color: #ff4d4d; margin-bottom: 2rem; text-align: center;">ÇALIŞAN SİL</h2>

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert-message alert-success">@ViewBag.SuccessMessage</div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert-message alert-error">@ViewBag.ErrorMessage</div>
        }

        <form asp-action="DeleteEmployeePost" method="post">
            <input type="email"
                   name="employeeMail"
                   class="delete-input"
                   placeholder="Silinecek çalışanın e-posta adresi"
                   required />

            <button type="submit" class="delete-btn">
                <i class="fas fa-trash-alt me-2"></i> ÇALIŞANI SİL
            </button>
        </form>

        <div class="warning-text">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Bu işlem geri alınamaz! Lütfen silme işleminden önce bilgileri doğrulayın.
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Input focus efektleri
        document.querySelector('.delete-input').addEventListener('focus', function() {
            this.style.borderColor = '#ff4d4d';
            this.style.boxShadow = '0 0 0 0.25rem rgba(255,77,77,0.25)';
        });

        document.querySelector('.delete-input').addEventListener('blur', function() {
            this.style.borderColor = 'rgba(255,255,255,0.2)';
            this.style.boxShadow = 'none';
        });
    </script>
}