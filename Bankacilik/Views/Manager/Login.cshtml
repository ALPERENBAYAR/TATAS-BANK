@{
    ViewData["Title"] = "Yönetici Girişi";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #0a0a0a 0%, #2d2d2d 100%);
        --secondary-gradient: linear-gradient(135deg, #121212 0%, #000000 100%);
        --accent-color: #00ff88;
        --hover-color: #00cc6a;
    }

    body {
        background: var(--secondary-gradient);
        min-height: 100vh;
    }

    .auth-card {
        background: rgba(18, 18, 18, 0.95);
        border: 1px solid rgba(255,255,255,0.1);
        backdrop-filter: blur(12px);
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .form-control-custom {
        background: rgba(30, 30, 30, 0.9) !important;
        border: 1px solid rgba(255,255,255,0.2) !important;
        color: #e0e0e0 !important;
        transition: all 0.3s ease;
    }

    .btn-custom {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        border-left: 4px solid var(--accent-color);
        color: #e0e0e0;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

        .btn-custom:hover {
            color: var(--accent-color) !important;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 255, 136, 0.2);
        }

        .btn-custom::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient( 120deg, transparent, rgba(0, 255, 136, 0.1), transparent );
            transition: all 0.6s;
        }

        .btn-custom:hover::before {
            left: 100%;
        }
</style>

<div class="container flex-grow-1">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="auth-card p-5">
                <h2 class="text-center mb-4 fw-bold" style="color: #00ff88;">YÖNETİCİ GİRİŞİ</h2>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mb-4" style="background: rgba(255,50,50,0.15); border-color: rgba(255,50,50,0.3); color: #ff6b6b;">
                        @ViewBag.Error
                    </div>
                }

                <form asp-action="LoginPost" method="post">
                    <!-- E-Posta -->
                    <div class="mb-4">
                        <label class="form-label text-white-50">E-Posta</label>
                        <input type="email"
                               id="ManagerMail"
                               name="ManagerMail"
                               class="form-control form-control-custom"
                               required>
                    </div>

                    <!-- Şifre -->
                    <div class="mb-4">
                        <label class="form-label text-white-50">Şifre</label>
                        <input type="password"
                               id="ManagerPassword"
                               name="ManagerPassword"
                               class="form-control form-control-custom"
                               required>
                    </div>

                    <!-- Giriş Butonu -->
                    <button type="submit" class="btn btn-custom w-100 py-3">
                        GİRİŞ YAP
                    </button>
                    <div class="mt-3 text-center">
                        <a asp-controller="Home" asp-action="ForgotPassword" class="btn btn-link text-white-50">Şifremi Unuttum</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Input efektleri
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function () {
                this.style.borderColor = '#00ff88';
                this.style.boxShadow = '0 0 0 0.25rem rgba(0,255,136,0.25)';
            });

            input.addEventListener('blur', function () {
                this.style.borderColor = 'rgba(255,255,255,0.2)';
                this.style.boxShadow = 'none';
            });
        });
    </script>
}